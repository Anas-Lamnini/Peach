<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <RelativeLayout
        android:id="@+id/Activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fond"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="157dp"
            android:layout_marginStart="35dp"
            android:layout_marginRight="15dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#B3EEECEC"
            android:ems="10"
            android:hint="     First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFFCF8F8"
            android:ems="10"
            android:hint="     Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Username"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFF7F7F7"
            android:ems="10"

            android:hint="     User Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFEEE9E9"
            android:ems="10"
            android:hint="     Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFE0DCDC"
            android:ems="10"
            android:hint="     Phone Number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Pasword1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="400dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFE7E6E6"
            android:ems="10"
            android:hint="     Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Pasword2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#BFE7E6E6"
            android:ems="10"
            android:hint="     Confirm your Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/ValidationButt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#99D50121"
            android:text="GO" />

        <ProgressBar
            android:id="@+id/Loading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="400dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/Transfer"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="633dp"
            android:text="Go Back" />

        <TextView
            android:id="@+id/Login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="550dp"
            android:fontFamily="serif"
            android:text="Sign UP"
            android:textColor="#FAF5F5"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>