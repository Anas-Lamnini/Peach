        android:textStyle="bold"
        app:fontFamily="serif" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
