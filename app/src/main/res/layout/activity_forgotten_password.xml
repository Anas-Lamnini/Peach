<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgottenPassword">

    <RelativeLayout
        android:id="@+id/Activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fond"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="800dp"
            android:layout_height="200dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#CCECD9D9"
            android:hint="    Email"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#CCE7DCDC"
            android:hint="    Username"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ValidBut"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/custom_dialog"
            android:backgroundTint="#99BD0909"
            android:hint="GO"
            android:text="Get My Password"
            android:textColor="#F3F0F0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="600dp"
            android:textColor="#F5F2F2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Transfer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="180dp"
            android:text="Go Back" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>